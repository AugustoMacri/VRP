{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar e Executar",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "src/main.c",
                "src/fitness.c",
                "src/selection.c",
                "src/crossing.c",
                "src/mutation.c",
                "src/ordering.c",
                "src/population.c",
                "src/print.c",
                "src/initialization.c",
                "-o",
                "output/main.exe",
                "-Iinclude",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}